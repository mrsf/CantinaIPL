<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 1 -->
    <style name="RedBigText" parent="@android:style/TextAppearance">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#991426</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <!-- 2 -->
    <style name="RedMediumText" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#991426</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <!-- 2 -->
    <style name="GreyMediumText" parent="@android:style/TextAppearance">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#5e5e5e</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <!-- 3 -->
    <style name="RadioButtomGrey" parent="@android:style/TextAppearance">
        <item name="android:textColor">#5e5e5e</item>
        <item name="android:textSize">11sp</item>
    </style>

    <!-- 4 -->
    <style name="RedSmalText" parent="@android:style/TextAppearance">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">#991426</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <!-- Style conta activity text -->
    <style name="TextGreySmal" parent="@android:style/TextAppearance">
        <item name="android:textColor">#5e5e5e</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="ButtonText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="buttonBarStyle">@style/ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="CustomActivityTheme" parent="@style/AppTheme">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.DeviceDefault.ActionBar">
        <item name="android:background">@color/actionbar_color</item>
        <item name="android:backgroundStacked">@color/actionbar_color</item>
        <item name="android:backgroundSplit">@color/actionbar_color</item>
        <item name="android:titleTextStyle">@style/MyBarTitle</item>
    </style>

    <style name="MyBarTitle" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_font_color</item>
    </style>

</resources>